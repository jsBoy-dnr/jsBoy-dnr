doctype html
html(class="no-js", lang="en")

    include ../components/head/head
    include ../components/header_top/header_top_custom
    include ../components/header_right/header_right
    include ../components/header_notif/header_notif

    include ../components/section_title/title_bl
    include ../components/inner_menu/inner_menu
    include ../components/quiz-block/quiz-block
    include ../components/lk_quiz_list/lk_quiz_list

    include ../components/footer/footer_custom

    head
        +head
        link(rel='stylesheet', href='../css/header_top/header_top.css')
        link(rel='stylesheet', href='../css/header_right/header_right.css')
        link(rel='stylesheet', href='../css/header_notif/header_notif.css')

        link(rel='stylesheet', href='../css/inner_menu/inner_menu.css')
        link(rel='stylesheet', href='../css/filterblock/filterblock.css')
        link(rel='stylesheet', href='../css/quiz-block/quiz-block.css')
        link(rel='stylesheet', href='../css/lk_quiz_list/lk_quiz_list.css')

        link(rel='stylesheet', href='../css/footer/footer.css')
    body
        .site-wrapper.lk.template--aim
            header.site-header.with-bg
                +header_top_custom
                +header_right
            .blocks-wrapper
                .inner
                    .menu-inner-top
                        ul.menu-inner-top__state
                            li.active
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_fifth_y.svg", alt)
                                    span.name Опросы
                            li
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_f_y.svg", alt)
                                    span.name Системы
                            li
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_sec_y.svg", alt)
                                    span.name Избранное
                            li
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_third_y.svg", alt)
                                    span.name Документы
                            li
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_fourth_y.svg", alt)
                                    span.name Здоровье
                            li
                                a(href="#")
                                    span.icon
                                        img(src="../../images/menu_icon_inner/icon_six_y.svg", alt)
                                    span.name Котировки
                    +title_bl('titles/title_my_quiz.png')
                    form(action)
                        .sort-bl
                            .form
                                input(type="text", placeholder="Поиск по названию")
                                button(type="submit")
                        .sort_bl.sort_bl--filter
                            .sort_bl_body
                                .to-heading(data-popup-trigger="profsearch")
                                    select#region-select(name="region")
                                        option(value="Выбрать ") Выбрать тематику
                                        option(value="Тестовый регион") Второе значение
                                        option(value="Тестовый регион 2") Третье значение
                                .to-heading
                                    select#region-select(name="region")
                                        option(value="Выбрать регион") Выбрать предприятие
                                        option(value="Тестовый регион") Тестовый регион
                                        option(value="Тестовый регион 2") Тестовый регион 2
                                .to-heading
                                    .checkbox__wrap
                                        input.custom-checkbox(type="checkbox", id="chek1", checked)
                                        label(for="chek1") Активные опросы
                                .to-heading
                                    .checkbox__wrap
                                        input.custom-checkbox(type="checkbox", id="chek2")
                                        label(for="chek2") Неактивные опросы
                                .to-heading
                                    select#heading-select(name="heading")
                                        option(value="Выбрать регион") По дате добавления
                                        option(value="Тестовая рубрика") Тестовая рубрика
                                        option(value="Тестовая рубрика 2") Тестовая рубрика 2
                    +lkquizlist
                    +title_bl('titles/title_sett_quiz.png')
                    form(action)
                        .top_link
                            a.btn(href="#") Создать новый опрос
                        .sort-bl
                            .form
                                input(type="text", placeholder="Поиск по названию")
                                button(type="submit")
                        .sort_bl.sort_bl--filter
                            .sort_bl_body
                                .to-heading(data-popup-trigger="profsearch")
                                    select#region-select(name="region")
                                        option(value="Выбрать ") Выбрать тематику
                                        option(value="Тестовый регион") Второе значение
                                        option(value="Тестовый регион 2") Третье значение
                                .to-heading
                                    select#region-select(name="region")
                                        option(value="Выбрать регион") Выбрать предприятие
                                        option(value="Тестовый регион") Тестовый регион
                                        option(value="Тестовый регион 2") Тестовый регион 2
                                .to-heading
                                    .checkbox__wrap
                                        input.custom-checkbox(type="checkbox", id="chek3", checked)
                                        label(for="chek3") Активные опросы
                                .to-heading
                                    .checkbox__wrap
                                        input.custom-checkbox(type="checkbox", id="chek4")
                                        label(for="chek4") Неактивные опросы
                                .to-heading
                                    select#heading-select(name="heading")
                                        option(value="Выбрать регион") По дате добавления
                                        option(value="Тестовая рубрика") Тестовая рубрика
                                        option(value="Тестовая рубрика 2") Тестовая рубрика 2
                    +lkquizlist
                    //- section.section
                    //-     +quiz-block
        +footer_custom

        script(src='../js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        script(src='../js/separate-js/jquery-2.2.4.min.js')
        script(src='../js/separate-js/owl.carousel.min.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js")

        script(src='../js/compiled.js')
        script(src='../js/separate-js/retina.min.js')
        script(src='../components/my_appeals_block/my_appeals_block.js')
        script(src='../components/filterPagerBlock/filterPagerBlock.js')
        script(src='../components/only_front/only_front.js')
        script(src='../components/footer/footer.js')

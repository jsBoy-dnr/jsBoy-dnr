                                    .author__photo
                                        img(src='../../images/people/employees6.png')
                                    .author__data
                                        .author__name 
                                            span Евгений Петров
                                            .date вчера в 11:04
                                        .author__msg Отличные новости
                                        a(href='#!' title='нравится').author__like Нравится
                                        a(href='#!' title='Ответить').author__repeat Ответить
                                a.more-link(href="#") Смотреть еще 
                                    span (33)
                                .comments__input
                                    .author__text Оставить комментарий
                                    form(action='') 
                                        input.custom-input(type='text' placeholder='Введите текст... ')        
        +footer_custom


